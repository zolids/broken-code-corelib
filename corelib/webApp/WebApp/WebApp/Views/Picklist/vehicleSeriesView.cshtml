@model IEnumerable<WebApp.Models.fleet_vehicle_series>

@{
    var series = Model;
}

<div class="col-lg-12 animated fadeIn">
    <div class="card-box" style="height: 550px;overflow: auto;">
        <form action="#" class="form-pick-list">
            <button type="button" data-toggle="tooltip" data-placement="right" data-original-title="Add new record" id="add-new-item" class="editVehicleSeres btn btn-success waves-effect waves-light btn-sm"><i class="fa fa-plus"></i></button>
            <span class="pull-right">
                <input type="text" class="form-control search-from-table" placeholder="Search item">
            </span>
            <hr />
            <table cellpadding="1" cellspacing="1" class="table table-hover collapsable-table" id="vehicle-series-table">
                <thead>
                    <tr>
                        <th>Series</th>
                        <th>Model</th>
                        <th style="text-align:center !important;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        if (series.Count() > 0)
                        {
                            var tmpMake = string.Empty;

                            foreach (var m in series)
                            {

                                if (@m.Make != tmpMake)
                                {

                                    <tr data-depth="0" class="collapse_table level0">
                                        <td colspan="3"><span class="toggle collapse"></span><b style="padding-left:10px;">@m.Make.ToUpper()</b></td>
                                    </tr>
                                }

                                <tr data-depth="1" class="collapse_table level1">
                                    <td id="@m.Model">@m.SeriesNo</td>
                                    <td id="@m.Model">@m.Model</td>
                                    <td align="center">
                                        <a id="@m.id" data-toggle="tooltip" data-placement="top" data-original-title="Edit Record" href="#" class="editVehicleSeres btn btn-icon waves-effect waves-light btn-primary p-lr-5"><i class="md md-border-color"></i></a>
                                        <a id="@m.id" module="fleet_vehicle_series" data-toggle="tooltip" data-placement="top" data-original-title="Remove Record" href="#" class="remove-item btn btn-icon waves-effect waves-light btn-default p-lr-5"><i class="glyphicon glyphicon-trash"></i></a>
                                    </td>
                                </tr>

                                tmpMake = m.Make;

                            }

                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="noResult">
                                    No Available Vehicle Series
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>

        </form>
    </div>
</div>