@model WebApp.Controllers.vehicleTypeAddEditDetails
@{
    var mModel = Model.fleetVechileMakes;
    var sModel = ((Model.fleetVehicleSeries != null) ? Model.fleetVehicleSeries.SingleOrDefault() : null);
}

<div class="col-lg-12 animated fadeIn">
    <div class="card-box">
        <div class="row clerfix">
            <form action="#" id="add-edit-vehicle-series" data-parsley-validate="" novalidate="">
                <div class="form-group">

                    @{ var id = ((@sModel != null) ? @sModel.id : 0); }
                    <input type="hidden" class="form-control" name="id" value="@id">

                    <label class="control-label">Vehicle Make : <span class="required">*</span></label>

                    @{ var Make = ((@sModel != null) ? @sModel.Make : string.Empty); }

                    <select class="form-control" name="Make" id="drp-series-make" required>
                        @{
                            if (mModel.Count() > 0)
                            {
                                var selected = string.Empty;
                                <option value="">Please Select</option>
                                foreach (var mod in mModel)
                                {

                                    selected = ((Make.ToUpper().ToString() == mod.vehicle_make.ToUpper().ToString() ? "selected" : string.Empty));

                                    <option @selected value="@mod.vehicle_make" id="0">@mod.vehicle_make</option>

                                }
                            }
                        }
                    </select>

                </div>
                <div class="form-group">


                        @{ var ModelName = ((@sModel != null) ? @sModel.Model : string.Empty); }
                        <input type="hidden" id="default-model-name" value="@ModelName" />

                        <label class="control-label">Vehicle Model : <span class="required">*</span></label>
                        <select class="form-control" name="Model" id="drp-series-model" required></select>

                </div>

                <div class="form-group">

                    @{ var SeriesNo = ((@sModel != null) ? @sModel.SeriesNo : string.Empty); }

                    <label class="control-label">Vehicle Series : <span class="required">*</span></label>
                    <input type="text" class="form-control" placeholder="Enter Vehicle Series" name="SeriesNo" value="@SeriesNo" maxlength="30" required>

                </div>

                <div class="form-group text-right m-b-0">
                    <a data-toggle="tooltip" data-placement="left" data-original-title="View vehicle series list" class="btn btn-primary waves-effect waves-light fleet-equipment-series" module="refresh">
                        <i class="md md-arrow-back"></i>Back
                    </a>
                    <a class="btn btn-primary waves-effect waves-light" id="btnUpdateVehicleSeries">
                        Apply Changes
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>