@{
    var activeProject = ((Request.Cookies["activeProject"] != null) ? Request.Cookies["activeProject"].Value : null);
}
<div class="breadcrumb-container row">
    <ol class="breadcrumb">
        <li><a href="/Home/Index?active_project=@activeProject">Home</a></li>
        <li class="active">Transaction list</li>
        <li class="breadcrumb-action"><a href="#" class="btn btn-primary waves-effect w-md waves-light m-b-5" id="submit-acquisition">Submit</a></li>
    </ol>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <form action="#" data-parsley-validate="" novalidate="" id="form-acquisition">

                <div class="row">

                    <div class="col-lg-12">
                        <h4><b>Vehicle Acquisition Request Form</b></h4>
                        <p class="text-muted font-13 m-b-30">
                            Individual Departments are responsible for purchasing any accessories or after-market
                            modifications for the vehicle.
                        </p>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="userName">Date: </label>
                                <input type="text" name="request_date" required="" placeholder="" class="form-control" id="request_date" data-parsley-id="request_date">
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="userName">Department: </label>
                                <input type="text" name="department" required="" placeholder="" class="form-control" id="department" data-parsley-id="department">
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="userName">Vehicle Type: </label>
                                <input type="text" name="vehicle_type" required="" placeholder="" class="form-control" id="vehicle_type" data-parsley-id="vehicle_type">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="userName">Vehicle Model: </label>
                                <input type="text" name="vehicle_model" required="" placeholder="" class="form-control" id="vehicle_model" data-parsley-id="vehicle_model">
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="checkbox checkbox-primary">
                                    <input id="fund_source" type="checkbox" name="fund_source">
                                    <label for="fund_source">Is this acquisition replacement of another CNM Vehicle?</label>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="checkbox checkbox-primary">
                                    <input id="under_agreement" type="checkbox" name="under_agreement">
                                    <label for="under_agreement">Is this acquisition under General Pricing Agreement?</label>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="checkbox checkbox-primary">
                                    <input id="add_to_fleet" type="checkbox" name="add_to_fleet">
                                    <label for="add_to_fleet">This acquisition will add to fleet?</label>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="checkbox checkbox-primary">
                                    <input id="mod_require" type="checkbox" name="mod_require">
                                    <label for="mod_require">Does the intended vehicle require any modifications, specialized equipment or accessories, describe? </label>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="checkbox checkbox-primary">
                                    <input id="alternative_fuel" type="checkbox" name="alternative_fuel">
                                    <label for="alternative_fuel">Does this vehicle use alternative fuels?</label>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="card-box">
                                <h4 class="m-b-30 m-t-0 header-title"><b>Justification of vehicle </b></h4>
                                <div class="summernote"></div>
                            </div>
                        </div>

                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

@section css {
    <link href="~/Content/theme/css/summernote.css" rel="stylesheet" />
}

@section scripts{

    <script src="~/Scripts/plugins/summernote.min.js"></script>
    <script src="~/Scripts/app/Acquisition.js"></script>

    <script>

        $(document).ready(function () {

            acquisition.init();

        });

    </script>
}
