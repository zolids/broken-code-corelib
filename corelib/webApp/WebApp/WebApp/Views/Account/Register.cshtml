@model WebApp.Models.Users

@{
    ViewBag.Title = "Register";
}
<div class="breadcrumb-container row">
    <ol class="breadcrumb">
        <li><a href="./">Home</a></li>
        <li><a href="#">Settings</a></li>
        <li class="active">Registration</li>
        <li class="breadcrumb-action"><button type="button" class="btn btn-success waves-effect w-md waves-light m-b-5">Create</button></li>
    </ol>
</div>

<div class="row">

    <div class="col-sm-12">
        <div class="card-box">
            <div class="row">
                <div class="col-lg-6">
                    <h5><b>User Registration</b></h5>
                    <p class="text-muted font-13 m-b-30">
                        Add new system user and access right
                    </p>
                    <form action="/Account/Register" data-parsley-validate="" method="post" novalidate="novalidate" class="form-horizontal group-border-dashed">

                        <div class="form-group">
                            <label class="col-sm-3 control-label">Full Name *</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" required="" placeholder="Full name" data-parsley-id="44" name="name">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">Username *</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" required="" placeholder="Username" data-parsley-id="34" name="username">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">Password *</label>
                            <div class="col-sm-5">
                                <input type="password" id="pass2" class="form-control" required="" placeholder="Password" data-parsley-id="36" name="password">
                            </div>
                            <div class="col-sm-3">
                                <input type="password" class="form-control" required="" data-parsley-equalto="#pass2" placeholder="Re-Type Password" data-parsley-id="38" name="password">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">Position</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" required="" placeholder="Position" data-parsley-id="42" name="position">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">E-Mail</label>
                            <div class="col-sm-8">
                                <input type="email" class="form-control" required="" parsley-type="email" placeholder="Enter a valid e-mail" data-parsley-id="40" name="email">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">User Type *</label>
                            <div class="col-sm-8">
                                <select class="form-control" id="usertype" name="usertype" required>
                                    <option value="2" selected="">AMS Administrator</option>
                                    <option value="4">Super Administrator</option>
                                    <option value="3">GSA</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">Account Status</label>
                            <div class="col-sm-8">
                                <select class="form-control" id="Status" name="Status" required>
                                    <option value="Active" selected="">Active</option>
                                    <option value="Inactive">Inactive</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">RFQ Approver</label>
                            <div class="col-sm-8">
                                <div class="checkbox checkbox-primary">
                                    <input id="rfqApprover" name="rfqApprover" type="checkbox" value="1">
                                    <label for="rfqApprover">
                                    </label>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
