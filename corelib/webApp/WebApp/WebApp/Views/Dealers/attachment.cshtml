<div class="col-lg-12">
    <div class="card-box">
        <h4 class="m-t-0 header-title"><b>Dealer Information</b></h4>
        <p class="text-muted font-13 m-b-30">
            Upload File Attachment
        </p>
     
        <form action="#" data-parsley-validate="" novalidate="" id="dealer-add-edit-attachment" method="post" runat="server" enctype="multipart/form-data">

            <div class="form-group">
                <div class="input-group">
                    <input id="uploadFile" class="form-control " placeholder="Choose File" disabled="disabled" required="" parsley-trigger="change" />
                    <span class="input-group-btn">
                        <span class="btn btn-default btn-file">
                            <i class="fa fa-cloud-upload"></i> Select
                            <input id="uploadBtn" class="form-control waves-effect waves-light" type="file" runat="server" name="attachment">
                        </span>
                    </span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label">Description : <span class="required">*</span> </label>
                <textarea class="form-control" name="Description" rows="9" required="" parsley-trigger="change"></textarea>
            </div>

            <div class="form-group text-right m-b-0">
                <a class="btn btn-primary waves-effect waves-light" id="btnUploadFileAttach">
                    Upload File
                </a>
            </div>

        </form>
    </div>
</div>

<script src="~/Content/theme/js/parsley.min.js"></script>
<script src="~/Scripts/app/dealers.js"></script>

<script>
    $(document).ready(function () {
        document.getElementById("uploadBtn").onchange = function () {
            document.getElementById("uploadFile").value = this.value;
        };
    })
</script>